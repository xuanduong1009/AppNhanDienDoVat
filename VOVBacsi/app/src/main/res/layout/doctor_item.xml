<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Hình ảnh bác sĩ -->
        <ImageView
            android:id="@+id/doctorImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_person_24"
            android:contentDescription="Doctor Image"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- Tên bác sĩ -->
        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="start"
            android:layout_marginBottom="4dp" />

        <!-- Chuyên môn -->
        <TextView
            android:id="@+id/doctorSpecialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialization"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="start"
            android:layout_marginBottom="2dp" />

        <!-- Học vị -->
        <TextView
            android:id="@+id/doctorDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Degree"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="start"
            android:layout_marginBottom="2dp" />

        <!-- Năm sinh -->
        <TextView
            android:id="@+id/doctorBirthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Year"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="start"
            android:layout_marginBottom="2dp" />

        <!-- Khoa -->
        <TextView
            android:id="@+id/doctorDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="start"
            android:layout_marginBottom="2dp" />

        <!-- Đơn vị -->
        <TextView
            android:id="@+id/doctorUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="start"
            android:layout_marginBottom="2dp" />

        <!-- Chuyên ngành -->
        <TextView
            android:id="@+id/doctorSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialty"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="start"
            android:layout_marginBottom="2dp" />

        <!-- Bệnh lý có thể điều trị -->
        <TextView
            android:id="@+id/doctorTreatableDiseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treatable Diseases"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="start"
            android:layout_marginBottom="2dp" />

        <!-- Giá -->
        <TextView
            android:id="@+id/doctorPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp" />

        <!-- Khung đặt lịch khám -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
