<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/doctor_profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_person_24" />

        <Button
            android:id="@+id/doctor_selectImageButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh" />

        <EditText
            android:id="@+id/doctor_nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên bác sĩ"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/doctor_specializationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chuyên ngành"
            android:inputType="text" />

        <AutoCompleteTextView
            android:id="@+id/doctor_specializationCategoryInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Loại bác sĩ"
            android:inputType="text" />

        <EditText
            android:id="@+id/doctor_degreeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bằng cấp"
            android:inputType="text" />

        <EditText
            android:id="@+id/doctor_birthYearInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Năm sinh"
            android:inputType="number" />

        <AutoCompleteTextView
            android:id="@+id/doctor_departmentInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên khoa"/>


        <EditText
            android:id="@+id/doctor_unitInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đơn vị công tác"
            android:inputType="text" />

        <EditText
            android:id="@+id/doctor_specialtyInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chuyên môn"
            android:inputType="text" />

        <EditText
            android:id="@+id/doctor_treatableDiseasesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Các bệnh có thể chữa"
            android:inputType="text" />

        <EditText
            android:id="@+id/doctor_priceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá khám (VND)"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/doctor_updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật thông tin" />

    </LinearLayout>
</ScrollView>
